<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@color/activity_color"
    tools:context=".LoginActivity">

    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginBottom="5dp"
            android:gravity="center_horizontal"
            android:text="Log In"
            android:textColor="@color/black"
            android:textSize="36sp"
            android:textStyle="bold" />

        <TextView
            android:textSize="16sp"
            android:layout_marginTop="8dp"
            android:textColor="@color/txt_gray"
            android:gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hi! Welcome back."/>

    </LinearLayout>
    <LinearLayout
        android:layout_gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            android:layout_marginStart="24dp"/>

        <EditText
            android:textColorHint="@color/txt_gray"
            android:id="@+id/emailTxt"
            android:textColor="@color/black"
            android:background="@drawable/edittxt_background"
            android:padding="15dp"
            android:layout_width="335dp"
            android:layout_height="52dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="10dp"
            android:hint="example@gmail.com"
            android:inputType="textEmailAddress"/>
        <TextView android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password"
            android:layout_marginStart="24dp"/>

        <EditText
            android:id="@+id/passwordTxt"
            android:layout_width="335dp"
            android:layout_height="52dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="8dp"
            android:textColor="@color/black"
            android:layout_marginBottom="10dp"
            android:background="@drawable/edittxt_background"
            android:drawableEnd="@drawable/visibility"
            android:hint="..............."
            android:inputType="textPassword"
            android:padding="15dp"
            android:textColorHint="@color/txt_gray" />

        <TextView
            android:textSize="16sp"
            android:textColor="@color/mainColor"
            android:gravity="right"
            android:layout_gravity="end"
            android:id="@+id/btnForgetPass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="50dp"
            android:text="Forget Password"/>
    </LinearLayout>
    <androidx.appcompat.widget.AppCompatButton
        android:textSize="20sp"
        android:textColor="@color/white"
        android:id="@+id/btnLogInAcct"
        android:background="@drawable/custom_btn"
        android:layout_width="195dp"
        android:layout_height="54.72dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:text="Log In"
        android:textAllCaps="false"
        android:textAlignment="center"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp">

        <View
            android:layout_gravity="center_vertical"
            android:id="@+id/view2"
            android:background="@color/gray"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_weight="1"/>

        <TextView android:textSize="14sp"
            android:textColor="@color/txt_gray"
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="or sign in with"
            android:layout_weight="0"/>

        <View
            android:layout_gravity="center_vertical"
            android:id="@+id/view3"
            android:background="@color/gray"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_weight="1"/>

    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="35dp">

        <ImageView android:id="@+id/btnGoogle"
            android:layout_width="62dp"
            android:layout_height="59dp"
            app:srcCompat="@drawable/google"/>
        <ImageView android:id="@+id/btnFacebook"
            android:layout_width="62dp"
            android:layout_height="59dp"
            android:layout_marginLeft="31dp"
            app:srcCompat="@drawable/facebook"/>
    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textSize="14sp"
            android:textColor="@color/black"
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Donâ€™t have an account?"/>

        <TextView
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/mainColor"
            android:id="@+id/btnSignUp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text="Sign Up"/>
    </LinearLayout>

</LinearLayout>