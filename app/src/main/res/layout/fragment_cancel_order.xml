<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:aapt="http://schemas.android.com/aapt"
    android:background="@color/activity_color"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- ProgressBar for loading indicator -->
    <ProgressBar
        android:id="@+id/progressBarCanceledOrdr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/recyCanceledOrdr"
        app:layout_constraintEnd_toEndOf="@+id/recyCanceledOrdr"
        app:layout_constraintStart_toStartOf="@+id/recyCanceledOrdr"
        app:layout_constraintTop_toTopOf="@+id/recyCanceledOrdr"
        style="?android:attr/progressBarStyle" />

    <!-- RecyclerView to display canceled orders -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyCanceledOrdr"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
